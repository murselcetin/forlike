<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/orange2"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/card_constraint"
                app:layout_constraintStart_toStartOf="@id/card_constraint"
                app:layout_constraintTop_toTopOf="@id/card_constraint"
                app:srcCompat="@drawable/tiktok_icon" />

            <TextView
                android:id="@+id/creditTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:text="100 KREDİ"
                android:textColor="@color/purple1"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/card_constraint"
                app:layout_constraintEnd_toStartOf="@id/view"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@id/card_constraint" />

            <View
                android:id="@+id/view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@color/purple1"
                app:layout_constraintBottom_toBottomOf="@id/card_constraint"
                app:layout_constraintEnd_toEndOf="@id/card_constraint"
                app:layout_constraintTop_toTopOf="@id/card_constraint" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:text="99.99 ₺"
                android:textColor="@color/orange1"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintTop_toTopOf="@id/view" />

            <TextView
                android:id="@+id/dPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:text="150.99 ₺"
                android:textColor="@color/orange1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/priceTextView"
                app:layout_constraintStart_toStartOf="@id/priceTextView"
                app:layout_constraintTop_toBottomOf="@id/priceTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>